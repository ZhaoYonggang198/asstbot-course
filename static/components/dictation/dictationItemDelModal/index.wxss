.modal-container{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
}
.modal-inner{
    background:#fff;
    border-radius:10px;
    overflow:hidden;
    max-width:400px;
    width:80%;
}
.modal-header{
    height:40px;
    line-height:40px;
    padding-left:15px;
    background:#19a1a8;
    color:#fff;
}
.modal-content{
    padding:10px 15px;
    min-height: 60px;
    justify-content: center;
    display: flex;
    align-items: center;
}
.modal-footer{
    display:flex;
    height:40px;
    line-height:40px;
    border-top:1px solid #d8d8d8;
}
.modal-btn{
    flex:1;
    text-align:center;
}
.btn-success{
    background: #19a1a8;
    color: #fff;
}
.btn-fail{
    color: #fff;
    background: #ccc;
}