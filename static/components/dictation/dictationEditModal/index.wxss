/* static/components/dictation/dictataionEditModal/index.wxss */
.modal-container{
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.5);
    display: flex;
    justify-content: center;
    align-items: center;
}
.modal-inner{
    background: #fff;
    border-radius: 15px;
    overflow: hidden;
    max-width:400px;
    width:80%;
}
.modal-header{
    height:40px;
    line-height:40px;
    padding-left:15px;
    background:#19a1a8;
    color:#fff;
}
.modal-content{
    padding:10px 15px;
}
.dic-edit-title{
    border: 1px solid #d8d8d8;
    padding-left: 5px;
    line-height: 32px;
    height: 32px;
    border-radius:5px;
    margin-bottom: 15px;
}
.dic-edit-scroll{
    max-height: 200px;
}
.dic-edit-text-container{
    display: flex;
    flex-wrap: wrap;
}
.dic-edit-item{
    padding:8px 30px 8px 10px;
    background:#19a1a8;
    color:#fff;
    border-radius:5px;
    font-size:14px;
    margin-right: 10px;
    margin-bottom: 10px;
    position: relative;
}
.icon-off{
    position:absolute;
    right:0px;
    top:11px;
    width:30px;
    height:30px;
    text-align:center;
}
.dic-edit-new{
    margin-top: 15px;
    border: 1px solid #d8d8d8;
    border-radius: 5px;
    padding-left: 5px;
    line-height: 32px;
    height: 32px;
}
.dic-edit-tip{
    font-size: 14px;
    color: #999;
}
.modal-footer{
    display:flex;
    height:40px;
    line-height:40px;
    border-top:1px solid #d8d8d8;
}
.modal-btn{
    flex:1;
    text-align:center;
}
.btn-success{
    background: #19a1a8;
    color: #fff;
}
.btn-fail{
    color: #fff;
    background: #ccc;
}