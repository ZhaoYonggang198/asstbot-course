.request-wrapper {
  padding: 10rpx 30rpx;
  background: #f2f2f2;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.request-wrapper .request {
  margin-bottom: 10rpx;
  padding:20rpx;
  color:#0c5053;
  border:solid #eaeaea 1rpx;
  border-radius:15px 15px 0 15px;
  width:auto!important;
  font-size:28rpx;
  font-weight:500;
  max-width:100%;
  background:#fff;
  position:relative;
}

.request-wrapper .request:active {
  background:#f2f2f2;
}

