  <view>
    <view class="wrapper word-text right-block">
      <block wx:if="{{content.caption}}">
        <view class="outgoing right-item" >
          <copyable-text text="{{content.caption}}"/>
        </view>
      </block>
    </view>
    <view class="right-block word-text" wx:if="{{content.imageUrl}}">
      <image bindtap="previewImage" class="image" mode="widthFix" src="{{content.imageUrl}}"></image>
    </view>
  </view>
