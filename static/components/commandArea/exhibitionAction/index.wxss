.action-container {
  display:flex;
  align-items:center;
  padding:20rpx 0rpx; 
}

.action-value-wrapper {
  width:auto;
  border-radius:30rpx;
  padding:5rpx;
  margin-left:15rpx;
  margin-right:15rpx;
  background-color:#f2f2f2;  
}

.action-value {
  white-space:nowrap;
  padding:10rpx 10rpx;
  background:#f2f2f2;
  border:3rpx solid #19a1a8;
  color:#19a1a8;
  border-radius:35rpx;
  padding:10rpx 22rpx;
  text-align:center;
  box-shadow:0 0 0;
  font-weight:500;
  min-width:60rpx;  
  font-size: 28rpx;
}

.action-value:active {
  background: #818796;
  color: #f2f2f2;
}