@import '/static/style/weui.wxss';
@import '/static/style/main.wxss';

.option-container {
  width:300rpx;
  border-radius:20rpx;
  height:400rpx;
  border:1rpx solid #dadada;
  margin-left:20rpx;
  background: #fff;
}

.image-box {
  overflow:hidden;
  height:300rpx;
  width:300rpx;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
  background-color:#f2f2f2;
}

image {
  width: 100%;
  height: 100%;
}

swiper {
  width: 710rpx;
  height: 400rpx;
}

.image-value {
  text-align:center;
  font-size:28rpx;
  height:100rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  color:#0c5053;
  font-weight:500;
}

.checked .image-value {
  background-color:#0c5053;
  font-weight:normal;
  color: white
}

.one-line-text {
  line-height: 100rpx;
  -webkit-line-clamp:1;
  text-align: center;
}
.two-line-text {
  line-height: 40rpx;
  -webkit-line-clamp:2;
  text-align: left;
  padding: 10rpx;
}

.action-container {
  padding: 20rpx 0 0 20rpx;
}

.action-value {
  white-space:nowrap;
  padding:10rpx 10rpx;
  background:#f2f2f2;
  border:3rpx solid #0c5053;
  color:#0c5053;
  border-radius:35rpx;
  padding:10rpx 20rpx;
  text-align:center;
  box-shadow:0 0 0;
  font-weight:500;
  font-size: 28rpx;
  margin-left: 25rpx;
}

.action-value:active {
  background: #0c5053;
  color: #f2f2f2
}