mixin course-info
  view(class="weui-cell__bd")
    view(class="course-name" :class="course.week") {{course.name}}
    view(class="addition-info")
      text(class="course-time" v-if="course.startTime") {{course.startTime}}~{{course.endTime}}
      text(class="course-teacher"  v-if="course.teacher") {{course.teacher}}
  view(class="weui-cell__ft" v-if="course.location") {{course.location}}

mixin navbar-swiper(vForParameter)
  view(class="course-table")
    view(class="weui-tab")
      view(class="tab-title")
        nav-bar(:navItems="weekdays" :current="activeDay"  @tabActive="tabActive")/
      view(class="weui-tab__panel")
        swiper(@change="swiperchange" :current="activeDay" style="height: 100%;")
          swiper-item(v-for=vForParameter :key="dayIdx" )
            view(class="weui-tab__content" style="height: 100%;")
              scroll-view(scroll-y='true' style="height: 100%; overflow:auto;")
                block(v-for="(interval, intervalIdx) in day.interval" :key="intervalIdx")
                  view(class="weui-cells__title") {{interval.name}}
                  view(class="weui-cells weui-cells_after-title")
                    block